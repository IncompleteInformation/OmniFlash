<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="OmniFlash.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="OmniFlash.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="OmniFlash.app.Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="OmniFlash.app.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="OmniFlash.app.ConstructActivity"
            android:label="@string/title_activity_construct" >
        </activity>
        <activity
            android:name="OmniFlash.app.ViewCardsActivity"
            android:label="@string/title_activity_view_cards" >
        </activity>
        <activity
            android:name="OmniFlash.app.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name="OmniFlash.app.StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>
